@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
@using (Html.BeginForm("Add", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.CategoryName, "", new { @class = "text-danger" })
        <br /><br />

        @Html.Label("Açıklamayı yazınız")
        @Html.TextAreaFor(c => c.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.CategoryDescription, "", new { @class = "text-danger" })
        <br /><br />
        <button class="btn btn-info" id="button">Kaydet</button>
    </div>
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<script>
    $('#button').click(function () {
        swal({
            title: "Tebrikler!",
            text: "Kategori başarılı bir şekilde eklendi.",
            buttons: false,
            icon: "info",
            timer: 6000
        }).then(function () {
            window.location.reload(true);
            tr.hide();
        });
    });
</script>

